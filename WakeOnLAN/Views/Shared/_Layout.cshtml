<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
         <meta name="viewport" content="width=device-width" charset="utf-8"/>
       
        <title>@ViewBag.Title - Отправка magic packet</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Url.Content("~/content/css/bootstrap.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/theme.css")" rel="stylesheet" type="text/css" />
         <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width" />
  @*   @Styles.Render("~/Content/css")*@
        @*      @Scripts.Render("~/bundles/modernizr")*@

    </head>
<body class="page align_center_to_right">
    <header>
          
        <div class="content-wrapper">
            <div class="float-left">
          <section class="featured">      
                <img src="@Url.Content("~/content/image/ethernet-card.png")" alt="Magic packet по локальной сети" width="64" height="64" style="border: 0;" />
          <div class="content-wrapper">
              <hgroup class="title">
                  <h1>@ViewBag.Title</h1>
                  <h2>@ViewBag.Message</h2>
              </hgroup>
              <p>
                
              
              </p>
          </div>
              </section>
            </div>
            <div class="float-right">
                <section id="login">
                    Добро пожаловать, <span class="username">@User.Identity.Name</span>!
                </section>
                <nav class="navigation-filmstrip">
                    <ul id="menu">
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                        <li>@Html.ActionLink("Включение", "Index", "Wol", null,new {@class="btn"})</li>
                        <li>@Html.ActionLink("Компьютеры в сети", "Index", "HostList",null,new {@class="btn"})</li>
                        <li>@Html.ActionLink("Инструменты", "Index", "Save",null,new {@class="btn"})</li>
                                          
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body" class="page align_center_to_right">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Отправка magic packet</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
